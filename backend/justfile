dev:
    uvicorn app.main:app --reload --host 0.0.0.0 --port 8000

test:
    pytest tests/ -v

lint:
    ruff check app/

fmt:
    ruff format app/

typecheck:
    mypy app/

check: lint fmt typecheck test

docker-build:
    docker build -t cinematch-backend .

docker-run:
    docker run -p 8000:8000 cinematch-backend
